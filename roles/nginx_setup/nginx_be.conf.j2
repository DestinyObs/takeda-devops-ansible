server {
    listen {{ be_external_port | default(8080) }} ssl;
    server_name {{ be_domain }};

    ssl_certificate /etc/letsencrypt/live/{{ be_domain }}/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/{{ be_domain }}/privkey.pem;

    access_log /var/log/nginx/{{ be_component }}_access.log;
    error_log /var/log/nginx/{{ be_component }}_error.log;

    location / {
        proxy_pass http://127.0.0.1:{{ be_internal_port }};
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    location /docs/ {
        proxy_pass http://127.0.0.1:{{ be_internal_port }}/docs/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}
